<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.CariMasjidActivity"
    android:background="#5ED864">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="184dp"
        android:layout_gravity="center"
        android:background="@drawable/mosque" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:background="#36803A"
        android:gravity="center"
        android:text="Mencari Masjid Terdekat"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:gravity="center"
            android:paddingTop="300dp"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:visibility="visible" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_location"/>

        <Button
            android:id="@+id/btn_navigasi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#36803A"
            android:text="Tekan Disini"
            android:textColor="#ffff"
            android:textSize="20dp"/>
    </FrameLayout>
</LinearLayout>